<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="bonanc.stingapp.ui.WallpaperFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Wallpaper"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/labelwallpaper"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/wallpaper1"
            android:text="Wall paper 1"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/wallpaper2"
            android:text="wall paper 2"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/wallpaper3"
            android:text="wall paper 3"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
